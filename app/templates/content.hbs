<nav class="mt-3" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">{{#link-to "index"}}Explore{{/link-to}}</li>
        <li class="breadcrumb-item active" aria-current="page">{{model.Name}}</li>
    </ol>
</nav>

<div>
    <img class="img-fluid" style="max-width:100%;height:auto;" src={{model.Picture1}} alt={{model.Picdescribe1}}>
</div>

<h2 class="text-center mt-3 text-sub font-weight-bold">{{model.Name}}</h2>

<div class="mt-2 mb-2">
    {{#if model.IsShowTicketinfo}}
        <span class="badge badge-pill badge-primary">{{model.Ticketinfo}}</span>
    {{/if}}
    {{#if model.IsShowOpentime}}
        <span class="badge badge-pill badge-primary">{{model.Opentime}}</span>
    {{/if}}
</div>     

<div class="mt-2 mb-2">
    <i class="fas fa-map-marker-alt"></i> {{model.Zone}}
    <i class="far fa-calendar-alt"></i> {{format-date model.Changetime}}
</div>

<div class="mt-3 mb-3">
    {{model.Description}}
</div>